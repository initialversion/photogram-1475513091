<div class="page-header">
  <h1>
    Bank accounts
    <a href="/bank_accounts/new" class="btn btn-lg btn-success">New Bank account</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Bank name</th>
        <th>Actions</th>
      </tr>

      <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.bank_name %></td>
        <td>
          <a href="/bank_accounts/<%= bank_account.id %>" class="btn btn-primary">Show</a>
          <a href="/bank_accounts/<%= bank_account.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bank_account/<%= bank_account.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
